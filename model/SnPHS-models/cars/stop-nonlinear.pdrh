model: npha;
/*
 * the model is accurate for 0-100 km/h period
 */
#define v_max 55.56 // [200 km/h] maximum speed of a car (m/s)
#define v_100 27.78 // m/s
#define drag 3.028e-4 // some average value (1/m)
//#define a_d 5.25
#define alpha 0.05776 
//#define beta 4
#define t_react 1.2
#define a_d 4.0

[0,1000] s; // distance m
[0,v_100] v; // velocity m/s (16.67 m/s = 60 km/h)
[0,30] tau; // time in seconds
[0,30] time;
//[4.0,6.0] a_d;
//dist_normal(1.65, 0.2) a_a;

//[3.9,4.1]mu;
#define mu 4.0
[0,0.2]sigma;
dist_normal(mu,sigma) beta;

//dist_normal(4,0.1) beta;
//[0.5,1.5] t_react;

// accelerating
{
mode 1;
flow:
d/dt[s]= v;
d/dt[v]= alpha*exp(-alpha*tau+beta)-drag*v*v;
d/dt[tau]= 1.0;
jump:
(and (v >= v_100))==>@2(and(s'=s)(v'=v)(tau'=0));
}

// reacting
{
mode 2;
flow:
d/dt[s]= v;
d/dt[v]= -drag*v*v;
d/dt[tau]= 1.0;
jump:
(and (tau = t_react))==>@3(and(s'=s)(v'=v)(tau'=0));
}

// braking
{
mode 3;
flow:
d/dt[s]= v;
d/dt[v]= -a_d-drag*v*v;
d/dt[tau]= 1.0;
jump:
(and (v <= 0))==>@4(and(s'=s)(v'=v)(tau'=0));
}

// stopped
{
mode 4;
flow:
d/dt[s]= v;
d/dt[v]= 0.0;
d/dt[tau]= 1.0;
jump:

}

init:
@1(and (s = 0) (v = 0) (tau = 0));

goal:
@4(and(tau=0)(s>=400));
